<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" xmlns:dc="http://www.omg.org/spec/DD/20100524/DC" xmlns:di="http://www.omg.org/spec/DD/20100524/DI" xsi:schemaLocation="http://www.omg.org/spec/BPMN/20100524/MODEL BPMN20.xsd" id="_IzucQDzUEeS6DsogJKn5xA" xmlns:camunda="http://activiti.org/bpmn" exporter="camunda modeler" exporterVersion="2.6.0" targetNamespace="http://activiti.org/bpmn">
  <process id="customer-rating" name="Customer Rating" isExecutable="true">

    <startEvent id="start" name="Customer List &#xA;Received" />

    <scriptTask id="calculate-customer-count" name="Calculate Customer Count" scriptFormat="groovy" camunda:resource="deployment://count.groovy"/>

    <sequenceFlow id="flow1" name="" sourceRef="start" targetRef="calculate-customer-count" />

    <exclusiveGateway id="gateway1" />

    <sequenceFlow id="flow2" name="" sourceRef="calculate-customer-count" targetRef="gateway1" />

    <serviceTask id="get-customer-rating" name="Get Customer Rating (SOAP)">
      <extensionElements>

        <camunda:connector>
          <camunda:connectorId>soap-http-connector</camunda:connectorId>
          <camunda:inputOutput>

            <camunda:inputParameter name="endpointUrl">
              http://localhost:8080/rating-service-1.0.0-SNAPSHOT/CustomerRatingService
            </camunda:inputParameter>

            <camunda:inputParameter name="headers">
              <camunda:map>
                <camunda:entry key="Content-Type">application/soap+xml;charset=UTF-8</camunda:entry>
              </camunda:map>
            </camunda:inputParameter>

            <camunda:inputParameter name="soapEnvelope">
              <camunda:script scriptFormat="freemarker" resource="deployment://soapEnvelope.ftl" />
            </camunda:inputParameter>

            <camunda:outputParameter name="customerRatings">
              <camunda:script scriptFormat="groovy" resource="deployment://parseRating.groovy" />
            </camunda:outputParameter>
          </camunda:inputOutput>
        </camunda:connector>

        <camunda:inputOutput>
          <camunda:inputParameter name="customerId">
            <camunda:script scriptFormat="groovy">
              S(customers).xPath('/customers/customer['+currentCustomerIdx+']/@id').string()
            </camunda:script>
          </camunda:inputParameter>
          <camunda:inputParameter name="customerSince">
            <camunda:script scriptFormat="groovy">
              S(customers).xPath('/customers/customer['+currentCustomerIdx+']/contractStartDate/text()').number()
            </camunda:script>
          </camunda:inputParameter>
        </camunda:inputOutput>

      </extensionElements>
    </serviceTask>

    <sequenceFlow id="flow3" name="" sourceRef="gateway1" targetRef="get-customer-rating">
      <extensionElements>
        <camunda:executionListener event="take">
          <camunda:script scriptFormat="groovy">
            execution.setVariable("currentCustomerIdx", currentCustomerIdx + 1)
          </camunda:script>
        </camunda:executionListener>
      </extensionElements>
    </sequenceFlow>

    <exclusiveGateway id="gateway2" name="All customer rated?" />

    <sequenceFlow id="flow4" name="" sourceRef="get-customer-rating" targetRef="gateway2" />

    <sequenceFlow id="flow5" name="No" sourceRef="gateway2" targetRef="gateway1">
      <conditionExpression xsi:type="tFormalExpression" language="groovy">
        <![CDATA[
          currentCustomerIdx < customerCount
        ]]>
      </conditionExpression>
    </sequenceFlow>

    <sequenceFlow id="flow6" name="Yes" sourceRef="gateway2" targetRef="save-customer-ratings">
      <conditionExpression xsi:type="tFormalExpression" language="groovy">
        <![CDATA[
          currentCustomerIdx >= customerCount
        ]]>
      </conditionExpression>
    </sequenceFlow>

    <serviceTask id="save-customer-ratings" name="Save Customer Ratings (REST)">
      <extensionElements>

        <camunda:connector>
          <camunda:connectorId>rest-http-connector</camunda:connectorId>
          <camunda:inputOutput>
            <camunda:inputParameter name="requestUrl">
              http://localhost:8080/rating-service-1.0.0-SNAPSHOT/rest/customer-ratings/create
            </camunda:inputParameter>
            <camunda:inputParameter name="requestType">POST</camunda:inputParameter>
            <camunda:inputParameter name="requestHeaders">
              <camunda:map>
                <entry key="Content-Type">application/json</entry>
              </camunda:map>
            </camunda:inputParameter>
            <camunda:inputParameter name="requestPayload">
              ${customerRatings}
            </camunda:inputParameter>
            <camunda:outputParameter name="statusCode">
              ${statusCode}
            </camunda:outputParameter>
          </camunda:inputOutput>
        </camunda:connector>

      </extensionElements>
    </serviceTask>

    <sequenceFlow id="flow7" name="" sourceRef="save-customer-ratings" targetRef="end" />

    <endEvent id="end" name="Customer Rating&#xA;Finished" />
  </process>

  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="customer-rating">
      <bpmndi:BPMNShape id="_BPMNShape_StartEvent_10" bpmnElement="start">
        <dc:Bounds height="36.0" width="36.0" x="249.0" y="143.0"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="_BPMNShape_ScriptTask_2" bpmnElement="calculate-customer-count">
        <dc:Bounds height="80.0" width="100.0" x="335.0" y="121.0"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge id="BPMNEdge_SequenceFlow_1" bpmnElement="flow1" sourceElement="_BPMNShape_StartEvent_10" targetElement="_BPMNShape_ScriptTask_2">
        <di:waypoint xsi:type="dc:Point" x="285.0" y="161.0"/>
        <di:waypoint xsi:type="dc:Point" x="335.0" y="161.0"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNShape id="_BPMNShape_ExclusiveGateway_21" bpmnElement="gateway1" isMarkerVisible="true">
        <dc:Bounds height="50.0" width="50.0" x="485.0" y="136.0"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge id="BPMNEdge_SequenceFlow_2" bpmnElement="flow2" sourceElement="_BPMNShape_ScriptTask_2" targetElement="_BPMNShape_ExclusiveGateway_21">
        <di:waypoint xsi:type="dc:Point" x="435.0" y="161.0"/>
        <di:waypoint xsi:type="dc:Point" x="485.0" y="161.0"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNShape id="_BPMNShape_ServiceTask_18" bpmnElement="get-customer-rating">
        <dc:Bounds height="80.0" width="100.0" x="585.0" y="121.0"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge id="BPMNEdge_SequenceFlow_3" bpmnElement="flow3" sourceElement="_BPMNShape_ExclusiveGateway_21" targetElement="_BPMNShape_ServiceTask_18">
        <di:waypoint xsi:type="dc:Point" x="535.0" y="161.0"/>
        <di:waypoint xsi:type="dc:Point" x="585.0" y="161.0"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNShape id="_BPMNShape_ExclusiveGateway_22" bpmnElement="gateway2" isMarkerVisible="true">
        <dc:Bounds height="50.0" width="50.0" x="735.0" y="136.0"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge id="BPMNEdge_SequenceFlow_4" bpmnElement="flow4" sourceElement="_BPMNShape_ServiceTask_18" targetElement="_BPMNShape_ExclusiveGateway_22">
        <di:waypoint xsi:type="dc:Point" x="685.0" y="161.0"/>
        <di:waypoint xsi:type="dc:Point" x="735.0" y="161.0"/>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="BPMNEdge_SequenceFlow_5" bpmnElement="flow5" sourceElement="_BPMNShape_ExclusiveGateway_22" targetElement="_BPMNShape_ExclusiveGateway_21">
        <di:waypoint xsi:type="dc:Point" x="760.0" y="136.0"/>
        <di:waypoint xsi:type="dc:Point" x="760.0" y="51.0"/>
        <di:waypoint xsi:type="dc:Point" x="510.0" y="51.0"/>
        <di:waypoint xsi:type="dc:Point" x="510.0" y="136.0"/>
        <bpmndi:BPMNLabel>
          <dc:Bounds height="22.0" width="23.0" x="735.0" y="101.0"/>
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNShape id="_BPMNShape_ServiceTask_19" bpmnElement="save-customer-ratings">
        <dc:Bounds height="80.0" width="100.0" x="876.0" y="121.0"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge id="BPMNEdge_SequenceFlow_6" bpmnElement="flow6" sourceElement="_BPMNShape_ExclusiveGateway_22" targetElement="_BPMNShape_ServiceTask_19">
        <di:waypoint xsi:type="dc:Point" x="785.0" y="161.0"/>
        <di:waypoint xsi:type="dc:Point" x="876.0" y="161.0"/>
        <bpmndi:BPMNLabel>
          <dc:Bounds height="6.0" width="6.0" x="807.0" y="161.0"/>
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNShape id="_BPMNShape_EndEvent_24" bpmnElement="end">
        <dc:Bounds height="36.0" width="36.0" x="1026.0" y="143.0"/>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge id="BPMNEdge_SequenceFlow_7" bpmnElement="flow7" sourceElement="_BPMNShape_ServiceTask_19" targetElement="_BPMNShape_EndEvent_24">
        <di:waypoint xsi:type="dc:Point" x="976.0" y="161.0"/>
        <di:waypoint xsi:type="dc:Point" x="1026.0" y="161.0"/>
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</definitions>
